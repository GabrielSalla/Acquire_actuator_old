<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.acquire.main.OptionsActivity" >

    <Button
        android:id="@+id/button_Acquisition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="onButtonClick_Acquisition"
        android:text="@string/title_activity_acquisition" />

    <Button
        android:id="@+id/button_Graph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button_Acquisition"
        android:layout_marginTop="5dp"
        android:onClick="onButtonClick_Graph"
        android:text="@string/title_activity_graph" />

    <Button
        android:id="@+id/button_WifiSetup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_Graph"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:onClick="onButtonClick_WifiSetup"
        android:text="@string/title_activity_wifi_setup" />

    <Button
        android:id="@+id/button_Records"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_WifiSetup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:onClick="onButtonClick_Records"
        android:text="@string/title_activity_records" />

</RelativeLayout>
